@model IEnumerable<ProjectFinalHorus.Models.Package>

@{
    ViewBag.Title = "Paquetes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Paquetes</h2>

<p>
    @Html.ActionLink("Crear Nuevo Paquete", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.restrict_to)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Domain.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.restrict_to)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domain.name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
